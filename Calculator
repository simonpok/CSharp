        private void button19_Click(object sender, EventArgs e)
        {
            decimal firstnum = calculation;
            decimal secondnum = Convert.ToDecimal(textBox3.Text);
            switch(operate)
            {
                case "+":
                    calculation = (firstnum + secondnum);
                    textBox3.Text=calculation.ToString();
                    
                    break;
                case "-":
                    calculation = (firstnum - secondnum);
                    textBox3.Text = calculation.ToString();
                    break;
                case "*":
                    calculation = (firstnum * secondnum);
                    textBox3.Text = calculation.ToString();
                    break;
                case "/":
                    calculation = (firstnum / secondnum);
                    textBox3.Text = calculation.ToString();
                    break;
            }
        }
