        public void GetResultValue()
        {
            if (textBox3.Text != "*" && textBox3.Text != "+" && textBox3.Text != "-" && textBox3.Text != "/")
            {
                calculation = Convert.ToDecimal(textBox3.Text);

            }


        }
            private void button18_Click(object sender, EventArgs e)
        {
            GetResultValue();
            calculation = Convert.ToDecimal(textBox3.Text);
